  <!-- Sidebar and toggle button -->
  <div id="menuToggle">â˜° Open Menu</div>
  <div id="sidebar">
    <a href="#welcome" onclick="showSection('welcome')">Welcome</a>
    <a href="#about" onclick="showSection('about')">About</a>
    <a href="#pong" onclick="showSection('pong')">Pong</a>
    <a href="#maze" onclick="showSection('maze')">Maze</a>
